# Prometheus config jinja2 template.
# This compose jinja2 template can be configured by corresponding Ansible playbook
# or by `config.sh` script in case of standalone installation.
#
# .. code:: bash
#
#     $ cd docker
#     $ ./config.sh --prometheus

global:
    scrape_interval: 10s
scrape_configs:
    - job_name: prometheus
      static_configs:
        - targets:
          - {{ prometheus.host }}:{{ prometheus.port }}
    - job_name: exporter
      static_configs:
        - targets:
            - {{ exporter.host }}:{{ exporter.port }}
